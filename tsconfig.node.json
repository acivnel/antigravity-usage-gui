{
    "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
    "include": [
        "electron.vite.config.ts",
        "src/main/**/*",
        "src/preload/**/*"
    ],
    "compilerOptions": {
        "composite": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "skipLibCheck": true,
        "types": [
            "electron-vite/node"
        ]
    }
}